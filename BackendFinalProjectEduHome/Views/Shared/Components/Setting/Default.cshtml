@{
    Settings settings = Model;
}


<div class="row">
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="single-widget pr-60">
            <div class="footer-logo pb-25">
                <a asp-action="index"><img src="~/assets/img/setting/@settings.FooterLogo" alt="eduhome"></a>
            </div>
            <p>@settings.FooterDescription</p>
            <div class="footer-social">
                <ul>
                    <li><a href="@settings.FacebookLink"><i class="zmdi zmdi-facebook"></i></a></li>
                    <li><a href="@settings.PinterestLink"><i class="zmdi zmdi-pinterest"></i></a></li>
                    <li><a href="@settings.VimeoLink"><i class="zmdi zmdi-vimeo"></i></a></li>
                    <li><a href="@settings.TwitterLink"><i class="zmdi zmdi-twitter"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="single-widget">
            <h3>information</h3>
            <ul>
                <li><a href="#">addmission</a></li>
                <li><a href="#">Academic Calender</a></li>
                <li><a href="event.html">Event List</a></li>
                <li><a href="#">Hostel &amp; Dinning</a></li>
                <li><a href="#">TimeTable</a></li>
            </ul>
        </div>
    </div>
    <div class="col-md-2 col-sm-6 col-xs-12">
        <div class="single-widget">
            <h3>useful links</h3>
            <ul>
                <li><a asp-controller="course" asp-action="index">our courses</a></li>
                <li><a asp-controller="about" asp-action="index">about us</a></li>
                <li><a href="teacher.html">teachers &amp; faculty</a></li>
                <li><a href="#">teams &amp; conditions</a></li>
                <li><a asp-controller="event" asp-action="index">our events</a></li>
            </ul>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="single-widget">
            <h3>get in touch</h3>
            <p>Address: @settings.Address<br>Second Address: @settings.SecondAddress</p>
            <p>@settings.Phone<br>@settings.SecondPhone</p>
            <p>@settings.WebSite<br>@settings.SecondWebsite</p>
        </div>
    </div>
</div>