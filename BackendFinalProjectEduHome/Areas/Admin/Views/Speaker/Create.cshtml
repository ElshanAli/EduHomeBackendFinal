@model SpeakerCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h4 class="card-title"> Create Speaker</h4>
<form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Firstname">First Name</label>
        <input asp-for="Firstname" class="form-control" placeholder="Enter the first name...">
        <span asp-validation-for="Firstname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Lastname">Lastname</label>
        <input asp-for="Lastname" class="form-control" placeholder="Enter the last name...">
        <span asp-validation-for="Lastname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image">Choose Images</label>
        <input asp-for="Image" class="form-control" placeholder="Choose Images" accept="image/*">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Position">Position</label>
        <input min="4" maxlength="25" asp-for="Position" class="form-control" placeholder="Write speaker position...">
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Company">Company</label>
        <input min="4" maxlength="25" asp-for="Company" class="form-control" placeholder="Write speaker company...">
        <span asp-validation-for="Company" class="text-danger"></span>
    </div>
   
    <button type="submit" class="btn btn-primary mr-2">Submit</button>
    <button class="btn btn-light" asp-action="Index">Cancel</button>
</form>
