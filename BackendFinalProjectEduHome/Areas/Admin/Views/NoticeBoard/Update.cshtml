@model NoticeBoardUpdateViewModel
@{
    ViewData["Title"] = "Update";
}

    <h4 class="card-title"> Update Blog</h4>
    <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
        <label asp-for="NoticeTitle">Notice Board Title</label>
        <input asp-for="NoticeTitle" class="form-control" placeholder="Enter the notice board title...">
        <span asp-validation-for="NoticeTitle" class="text-danger"></span>
        </div>
        <div class="form-group">
        <label asp-for="NoticeDescription">Notice Board Description</label>
        <input asp-for="NoticeDescription" class="form-control" placeholder="Enter the notice board description...">
        <span asp-validation-for="NoticeDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
        <label asp-for="VideoUrl">Video Url</label>
        <input asp-for="VideoUrl" class="form-control" placeholder="Enter the video url...">
        <span asp-validation-for="VideoUrl" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <button class="btn btn-light" asp-action="Index">Cancel</button>
    </form>

