@model WelcomeEduUpdateViewModel

@{
    ViewData["Title"] = "Create";
}

@section Styles
    {
    <style>
        .blogImage {
            width: 150px !important;
            height: 150px !important;
            object-fit: contain !important;
            border-radius: 0px !important;
        }
    </style>
}

    <h4 class="card-title"> Update Welcome Edu</h4>
    <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <textarea asp-for="Title" class="form-control textEditor" placeholder="Enter the title..."></textarea>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control textEditor" placeholder="Enter the description..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Image">Choose Images</label>
            <input asp-for="Image" class="form-control" placeholder="Choose Images" accept="image/*">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="imagesTable">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <img class="blogImage" src="~/assets/img/welcomeedu/@Model.ImageUrl">
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger removeProductImage" data-id="@Model.Id">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <button class="btn btn-light" asp-action="Index">Cancel</button>
    </form>

    @section Scripts{
    <partial name="_CKEScriptsPartial" />
}