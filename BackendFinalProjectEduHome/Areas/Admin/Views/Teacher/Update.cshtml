@model TeacherUpdateViewModel
@{
    ViewData["Title"] = "Update";
}

@section Styles
    {
        <style>
            .sliderImage {
                width: 150px !important;
                height: 150px !important;
                object-fit: contain !important;
                border-radius: 0px !important;
            }
        </style>
}

<h4 class="card-title"> Update Teacher</h4>
<form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FullName">Title</label>
        <input asp-for="FullName" class="form-control" placeholder="Enter the teacher fullname...">
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Profession">Subtitle</label>
        <input asp-for="Profession" class="form-control" placeholder="Enter the the profession...">
        <span asp-validation-for="Profession" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image">Choose Teacher Images</label>
        <input asp-for="Image" class="form-control" placeholder="Choose Images" accept="image/*">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

        <div class="imagesTable">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <img class="sliderImage" src="~/assets/img/teacher/@Model.ImageUrl">
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger removeProductImage" data-id="@Model.Id">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    <div class="form-group">
        <label asp-for="AboutTeacher">About</label>
        <input asp-for="AboutTeacher" class="form-control" placeholder="Write about yourself...">
        <span asp-validation-for="AboutTeacher" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Degree">Degrees</label>
        <input asp-for="Degree" class="form-control" placeholder="Enter the degree...">
        <span asp-validation-for="Degree" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Experience">Experiences</label>
        <input asp-for="Experience" class="form-control" placeholder="Enter the experience...">
        <span asp-validation-for="Experience" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hobby">Hobbies</label>
        <input asp-for="Hobby" class="form-control" placeholder="Enter the hobby...">
        <span asp-validation-for="Hobby" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Faculty">Choose Button Source</label>
        <input asp-for="Faculty" class="form-control" placeholder="Enter the faculty...">
        <span asp-validation-for="Faculty" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmailAddress">Email Address</label>
        <input asp-for="EmailAddress" class="form-control" placeholder="Enter the email-address...">
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter the phone-number...">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SkypeAddress">Skype Address</label>
        <input asp-for="SkypeAddress" class="form-control" placeholder="Enter the skype-address...">
        <span asp-validation-for="SkypeAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LanguageSkill">Language Skill</label>
        <input asp-for="LanguageSkill" class="form-control" placeholder="Enter the language skill...">
        <span asp-validation-for="LanguageSkill" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DesignSkill">Design Skill</label>
        <input asp-for="DesignSkill" class="form-control" placeholder="Enter the design skill...">
        <span asp-validation-for="DesignSkill" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TeamLeaderSkill">Team Leader Skill</label>
        <input asp-for="TeamLeaderSkill" class="form-control" placeholder="Enter the team leader skill...">
        <span asp-validation-for="TeamLeaderSkill" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="InnovationSkill">Innovation Skill</label>
        <input asp-for="InnovationSkill" class="form-control" placeholder="Enter the innovation skill...">
        <span asp-validation-for="InnovationSkill" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DevelopmentSkill">Team Development Skill</label>
        <input asp-for="DevelopmentSkill" class="form-control" placeholder="Enter the development skill...">
        <span asp-validation-for="DevelopmentSkill" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CommunicationSkill">Team Communication Skill</label>
        <input asp-for="CommunicationSkill" class="form-control" placeholder="Enter the communication skill...">
        <span asp-validation-for="CommunicationSkill" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mr-2">Submit</button>
    <button class="btn btn-light" asp-action="Index">Cancel</button>
</form>


