        </div>
        <div class="form-group">
            <label asp-for="Address">Address</label>
            <input asp-for="Address" class="form-control" placeholder="Enter the address...">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SecondAddress">Second Address</label>
            <input asp-for="SecondAddress" class="form-control" placeholder="Enter the second address...">
            <span asp-validation-for="SecondAddress" class="text-danger"></span>
        </div>
