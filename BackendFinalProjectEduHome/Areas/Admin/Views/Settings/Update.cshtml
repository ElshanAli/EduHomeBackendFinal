            <input asp-for="GoogleMapCode" class="form-control" placeholder="Enter the google map code...">
            <span asp-validation-for="GoogleMapCode" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <button class="btn btn-light" asp-action="Index">Cancel</button>
