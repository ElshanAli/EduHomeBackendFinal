            <label asp-for="FooterDescription">Footer Description</label>
            <input asp-for="FooterDescription" class="form-control" placeholder="Enter the footer description...">
            <span asp-validation-for="FooterDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="WebSite">Web Site</label>
            <input asp-for="WebSite" class="form-control" placeholder="Enter the web site link...">
            <span asp-validation-for="WebSite" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SecondWebsite">Second Web Site</label>
            <input asp-for="SecondWebsite" class="form-control" placeholder="Enter the second web site link...">
            <span asp-validation-for="SecondWebsite" class="text-danger"></span>
        </div>
            <div class="imagesTable">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Website Logo</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <img class="sliderImage" src="~/assets/img/setting/@Model.WebSiteImage">
                            </td>
                    </tr>
                </tbody>
            </table>
            </div>
        <div class="form-group">
            <label asp-for="FormWebsiteImage">Web Site</label>
            <input asp-for="FormWebsiteImage" class="form-control" placeholder="Enter the web site link...">
            <span asp-validation-for="FormWebsiteImage" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GreetingText">GreetingText</label>
            <input asp-for="GreetingText" class="form-control" placeholder="Enter the greeting text...">
            <span asp-validation-for="GreetingText" class="text-danger"></span>
        </div>
