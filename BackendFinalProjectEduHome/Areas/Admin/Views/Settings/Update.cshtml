@model SettingsUpdateViewModel
@{
    ViewData["Title"] = "Update";
}

@section Styles
    {
    <style>
        .sliderImage {
            width: 150px !important;
            height: 150px !important;
            object-fit: contain !important;
            border-radius: 0px !important;
        }
    </style>
}

    <h4 class="card-title"> Update Settings</h4>
    <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Phone">Phone</label>
            <input asp-for="Phone" class="form-control" placeholder="Enter the teacher fullname...">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="imagesTable">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Phone Logo</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <img class="sliderImage" src="~/assets/img/setting/@Model.PhoneImage">
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="form-group">
            <label asp-for="FormPhoneImage">Choose Header Logo Images</label>
            <input asp-for="FormPhoneImage" class="form-control" placeholder="Choose Images" accept="image/*">
            <span asp-validation-for="FormPhoneImage" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SecondPhone">SecondPhone</label>
            <input asp-for="SecondPhone" class="form-control" placeholder="Enter the the profession...">
            <span asp-validation-for="SecondPhone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="HeaderLogoImage">Choose Header Logo Images</label>
            <input asp-for="HeaderLogoImage" class="form-control" placeholder="Choose Images" accept="image/*">
            <span asp-validation-for="HeaderLogoImage" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FooterLogoImage">Choose Footer Logo Image</label>
            <input asp-for="FooterLogoImage" class="form-control" placeholder="Choose Images" accept="image/*">
            <span asp-validation-for="FooterLogoImage" class="text-danger"></span>
        </div>

        <div class="imagesTable">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Header Logo</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <img class="sliderImage" src="~/assets/img/setting/@Model.HeaderLogo">
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="imagesTable">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Footer Logo</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <img class="sliderImage" src="~/assets/img/setting/@Model.FooterLogo">
