            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Address Logo</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <img class="sliderImage" src="~/assets/img/setting/@Model.AddressImage">
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="form-group">
            <label asp-for="FormAddressImage">Address</label>
            <input asp-for="FormAddressImage" class="form-control" placeholder="Enter the address...">
            <span asp-validation-for="FormAddressImage" class="text-danger"></span>
        </div>
