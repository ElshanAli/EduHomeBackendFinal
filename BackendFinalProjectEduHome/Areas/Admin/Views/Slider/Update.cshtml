@model SliderUpdateViewModel
@{
    ViewData["Title"] = "Update";
}

@section Styles
    {
    <style>
        .sliderImage {
            width: 150px !important;
            height: 150px !important;
            object-fit: contain !important;
            border-radius: 0px !important;
        }
    </style>
}

<h4 class="card-title"> Update Slider</h4>
<form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter the slider title...">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Subtitle">Subtitle</label>
        <input asp-for="Subtitle" class="form-control" placeholder="Enter the subtitle...">
        <span asp-validation-for="Subtitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image">Choose Images</label>
        <input asp-for="Image" class="form-control" placeholder="Choose Images" accept="image/*">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="imagesTable">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>              
                    <tr>
                        <td>
                        <img class="sliderImage" src="~/assets/img/slider/@Model.ImageUrl">
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger removeProductImage" data-id="@Model.Id">Delete</button>
                        </td>
                    </tr>               
            </tbody>
        </table>
    </div>
    <div class="form-group">
        <label asp-for="BtnText">Choose Button Text</label>
        <input asp-for="BtnText" class="form-control" placeholder="Choose Button Text...">
        <span asp-validation-for="BtnText" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BtnSrc">Choose Button Source</label>
        <input asp-for="BtnSrc" class="form-control" placeholder="Choose Button Source...">
        <span asp-validation-for="BtnSrc" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mr-2">Submit</button>
    <button class="btn btn-light" asp-action="Index">Cancel</button>
</form>

