@model CategoriesUpdateViewModel

@{
    ViewData["Title"] = "Update";
}

<h4 class="card-title"> Create Category</h4>
<form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name">Category Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter the category name...">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mr-2">Submit</button>
    <button class="btn btn-light" asp-action="Index">Cancel</button>
</form>
